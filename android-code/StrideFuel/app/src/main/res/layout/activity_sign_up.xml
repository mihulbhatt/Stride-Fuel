<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFE"
    android:backgroundTint="@color/white"
    tools:context=".SignUp"
    tools:layout_editor_absoluteX="2dp">

    <EditText
        android:id="@+id/pass2edittext"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/mulish_semibold"
        android:hint="Re-enter your password"
        android:inputType="textPassword"
        android:paddingLeft="50dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toBottomOf="@+id/pass1edittext"
        app:layout_constraintVertical_bias="0.06999999" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/pass2edittext"
        app:layout_constraintEnd_toEndOf="@+id/pass2edittext"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="@+id/pass2edittext"
        app:layout_constraintTop_toTopOf="@+id/pass2edittext"
        app:layout_constraintVertical_bias="0.42000002"
        app:srcCompat="@drawable/passlock" />

    <TextView
        android:id="@+id/createacctxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_bold"
        android:text="Create Account"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="0.060000002" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:fontFamily="@font/mulish_semibold"
        android:lineSpacingExtra="5sp"
        android:text="Fuel your passion, achieve your dreamsâ€”join us and make every day count!"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toBottomOf="@+id/createacctxt"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
        android:id="@+id/usernameedittext"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/mulish_semibold"
        android:hint="Choose a username"
        android:inputType="text"
        android:paddingLeft="50dp"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.06999999" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:paddingLeft="-8dp"
        app:layout_constraintBottom_toBottomOf="@+id/usernameedittext"
        app:layout_constraintEnd_toEndOf="@+id/usernameedittext"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/usernameedittext"
        app:layout_constraintTop_toTopOf="@+id/usernameedittext"
        app:srcCompat="@drawable/usericon" />

    <EditText
        android:id="@+id/emailaddedittext"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Your email adrress"
        android:inputType="textEmailAddress"
        android:paddingLeft="50dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toBottomOf="@+id/usernameedittext"
        app:layout_constraintVertical_bias="0.050000012" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:paddingLeft="-8dp"
        app:layout_constraintBottom_toBottomOf="@+id/emailaddedittext"
        app:layout_constraintEnd_toEndOf="@+id/emailaddedittext"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emailaddedittext"
        app:layout_constraintTop_toTopOf="@+id/emailaddedittext"
        app:srcCompat="@drawable/emailrealicon" />

    <EditText
        android:id="@+id/pass1edittext"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/mulish_semibold"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:paddingLeft="50dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toBottomOf="@+id/emailaddedittext"
        app:layout_constraintVertical_bias="0.060000002" />


    <Button
        android:id="@+id/signup"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:backgroundTint="#927AF4"
        android:fontFamily="@font/mulish_bold"
        android:text="Sign Up"
        android:textColorLink="@color/ic_launcher_background"
        android:textSize="19sp"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        app:layout_constraintVertical_bias="0.13999999" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_semibold"
        android:text="Already registered?"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toBottomOf="@+id/signup"
        app:layout_constraintVertical_bias="0.26999998" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Log In"
        android:textColor="#927AF4"
        android:textColorHighlight="#927AF4"
        android:textColorLink="#927AF4"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/signup"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/pass1edittext"
        app:layout_constraintEnd_toEndOf="@+id/pass1edittext"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="@+id/pass1edittext"
        app:layout_constraintTop_toTopOf="@+id/pass1edittext"
        app:layout_constraintVertical_bias="0.42000002"
        app:srcCompat="@drawable/passlock" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:fontFamily="@font/mulish_semibold"
        android:text="I agree with Terms &amp; Conditions"
        android:textColor="#000000"
        app:checkedState="checked"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toBottomOf="@+id/pass2edittext"
        app:layout_constraintVertical_bias="0.120000005" />

</androidx.constraintlayout.widget.ConstraintLayout>